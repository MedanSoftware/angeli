{% extends 'base.twig' %}

{% block title %}{{ constant('APP_INFO').name }} | 500 - {{ lang('500_error_heading') }}.{% endblock %}

{% block content %}
<div class="error-page">
	<h2 class="headline text-red">500</h2>
	<div class="error-content">
		<h3><i class="fa fa-warning text-red"></i> {{ lang('500_error_php') }}.</h3>
		<p>Severity: {{ severity }}</p>
		<p>Message: {{ message }}</p>
		<p>Filename: {{ filepath }}</p>
		<p>Line: {{ line }}</p>

		{% if constant('SHOW_DEBUG_BACKTRACE') is defined and constant('SHOW_DEBUG_BACKTRACE') == TRUE %}
			<p>Backtrace:</p>
			<ul>
				{% for error in debug_backtrace() %}
					<li>
						{% if error.file is defined %}
							<p style="margin-left:10px">
								File: {{ error.file }}<br>
								Line: {{ error.line }}<br>
								Function: {{ error.function }}
							</p>
						{% endif %}
					</li>
				{% endfor %}
			</ul>
		{% endif %}
	</div>
</div>
{% endblock %}